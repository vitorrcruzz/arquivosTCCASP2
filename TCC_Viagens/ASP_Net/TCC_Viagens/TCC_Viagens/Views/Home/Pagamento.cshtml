
@{
    ViewBag.Title = "Pagamento";
}

<h2>Selecione uma forma de pagamento</h2>

@using (Html.BeginForm("Confi_Pagamento", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal container center">
        <div class="form-group">
            @Html.DropDownList("Tipo_Pagamento", ViewBag.Tipo_Pagamento as List<SelectListItem>)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Finalizar Cadastro" class="color btn btn-default azul" />
            </div>
        </div>
    </div>
}

